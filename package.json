  "type": "module",
  "description": "A lightweight React utility that exposes an async confirmation dialog, allowing you to await user confirmation before proceeding",
  "keywords": [
    "react",
    "react-component",
    "confirmation",
    "confirm",
    "dialog",
    "modal",
    "alert",
    "popup",
    "typescript"
  ],
  "main": "dist/main.min.js",
  "module": "dist/main.esm.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/main.esm.js",
      "require": "./dist/main.min.js"
    },
    "./style.css": "./dist/index.css"
  },
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "vite build",
    "bump": "node scripts/bumper.js",
    "test": "vitest",
    "preview": "vite preview",
